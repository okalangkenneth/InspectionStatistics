@page "/adddepartment"

<h3 class="mb-5">New department</h3>

@Message

<EditForm Model="@DepartmentViewModel" OnValidSubmit="@HandleValidSubmit">

    <DataAnnotationsValidator />
    <ValidationSummary></ValidationSummary>

    <div class="form-group row">
        <label for="name" class="col-sm-3">Department name: </label>
        <InputText id="name" class="form-control col-sm-5" @bind-Value="@DepartmentViewModel.InspectionType" placeholder="Enter department name"></InputText>
        <ValidationMessage class="offset-sm-3 col-sm-5" For="@(() => DepartmentViewModel.InspectionType)" />
    </div>

    <button type="submit" class="submit-button mt-3">Save department</button>
</EditForm>